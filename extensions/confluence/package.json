{
    "name": "confluence",
    "version": "6.0.0",
    "description": "Integrates with the Atlassian's Confluence (Only compatible with Cognigy version v.2025.5.0 and above).",
    "main": "build/module.js",
    "scripts": {
        "transpile": "tsc -p tsconfig.production.json",
        "zip": "tar cfz confluence.tar.gz build/* package.json package-lock.json README.md icon.png",
        "build": "npm run test && npm run transpile && npm run lint && npm run zip",
        "format": "biome check --write",
        "lint": "biome check",
        "test": "node --test --import=tsx --experimental-test-coverage --test-coverage-exclude='**/*.test.ts'"
    },
    "keywords": [
        "Knowledge",
        "Wiki",
        "confluence-kai",
        "extensions"
    ],
    "engines": {
        "node": ">=22.22.0",
        "npm": ">=11.9.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Cognigy/Extensions"
    },
    "author": "Cognigy GmbH",
    "license": "MIT",
    "devDependencies": {
        "@biomejs/biome": "2.2.4",
        "@types/node": "^24.2.0",
        "@types/turndown": "^5.0.1",
        "tsx": "4.21.0",
        "typescript": "5.9.2"
    },
    "dependencies": {
        "@cognigy/extension-tools": "^0.17.0-rc4",
        "@langchain/textsplitters": "0.1.0",
        "turndown": "7.2.2"
    }
}
